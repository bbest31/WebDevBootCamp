<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= marine.title%></div>
    <form class="ui form" action="/space_marines/<%=marine._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="marine[title]" value="<%=marine.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="marine[image]" placeholder="<%=marine.image %>">
        </div>
        <div class="field">
            <label>Bio</label>
            <textarea name="marine[body]"><%=marine.body%></textarea>
            </div>
        <button class="ui black basic button">Submit</button>
    </form>
</div>
<% include partials/footer %>