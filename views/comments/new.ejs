<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center;">Add New Comment to <%= world.name %></h1>
        <div style="width:30%; margin: 25px auto;">
             <form action="/worlds/<%world._id%>/comments" method="POST">
                 <div class="form-group">
                     <input class="form-control" type="text" name="comment[name]" placeholder="text">
                 </div>
                 <div class="form-group">
                     <input class="btn btn-block btn-lg btn-primary"type="submit">
                 </div>
        </form>
         <a href="/worlds/<%=world._id%>">Go Back</a>
        </div>
     </div>
</div>

<% include ../partials/footer%>